{% extends "admin/common/layout.njk" %}

{% block head %}
  <title>Receitas - Admin Foodfy</title>
  <link rel="stylesheet" href="/admin/recipes.css">
{% endblock %}

{% block content %}

<h3>Receita: {{recipe.recipe_title}}</h3> 
<a href="/admin/recipes/{{recipe.recipe_id}}/edit" class="btn btn-edit">Editar receita</a>
{# <div class="avatar" style="background-image: url({{recipe.file_src}})"></div> #}
<div class="avatar"> 
  <img src="{{recipe.file_src}}" alt="{{recipe.recipe_title}}">
</div>

<div class="thumbnail">
  {% for file in files %}
  <img src="{{file.file_src}}" alt="{{file.recipe_title}}">
  {% endfor %}
</div>

<h1>{{recipe.recipe_title}}</h1>
<h3 class="author">por {{recipe.chef_name}}</h3> 

<h2 class="title">Ingredientes</h2>
<div class="list-ingredients">
<ul>
{% for ingredient in recipe.recipe_ingredients %} 
<li>{{ingredient}}</li>
{% endfor %}
</ul>
</div>

<h2 class="title">Modo de preparo</h2>
<div class="list-steps">
<ul>
{% for step in recipe.recipe_preparation %}
<li>{{step}}</li>
{% endfor %}
</ul>
</div> 

<h2 class="title">Informações adicionais</h2>
<p>{{recipe.recipe_information}}</p>

<script src="/common/change-recipe-images.js"></script> 


{% endblock %}

