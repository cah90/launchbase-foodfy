{% extends "./header.njk" %}

{% block head %}
  <title>Esqueceu a senha?</title>
  <link rel="stylesheet" href="/admin/users.css">
  <link rel="stylesheet" href="/admin/session.css">
{% endblock %}

{% block content %}

<h3>Esqueceu a senha?</h3>

<form action="/users/forgot-password" method="POST">
  <div class="item">
    <h4>Email</h4>
    <input  
      class="{{inputClass}}"
      id="email" 
      type="text" 
      name="email"
      placeholder="Digite o seu email para recuperar a senha"
      onblur="Validate.apply(this, 'isEmail')"
      >
  </div>
 
    <button type="submit" class="btn btn-submit">Recuperar</button>

  </form>

  </div>
</div>


<script src="/admin/scripts.js"></script>

{% endblock %}