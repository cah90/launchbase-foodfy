{% extends "./header.njk" %}

{% block head %}
  <title>Crie nova senha</title>
  <link rel="stylesheet" href="/admin/users.css">
  <link rel="stylesheet" href="/admin/session.css">
{% endblock %}

{% block content %}

<h3>Nova Senha</h3>

<form action="/users/reset-password" method="POST">
  <div class="item">
    <h4>Email</h4>
    <input  
      id="email" 
      type="text" 
      name="email"
      placeholder="Digite o seu email"
      value="{{user.email}}"
      onblur="Validate.apply(this, 'isEmail')"
      >
  </div>

  <div class="item">
    <h4>Nova senha</h4>
    <input 
      id="password" 
      type="password" 
      name="password"
      placeholder="Digite sua nova senha"
      >
  </div>

  <div class="item">
    <h4>Repetir senha</h4>
    <input 
      id="passwordRepeat" 
      type="password" 
      name="passwordRepeat"
      placeholder="Repita a nova senha"
      >
  </div>

  <input type="hidden" name="token" value={{token}}>

    <button type="submit" class="btn btn-submit">Nova Senha</button>
  </form>

  </div>
</div>


<script src="/admin/scripts.js"></script>

{% endblock %}