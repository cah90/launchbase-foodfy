 {% extends "./layout.njk" %}

 {% block head %}
 <title>{{ recipe.title }}</title>
 <link rel="stylesheet" href="/main/main.css">
 {% endblock %}

 {% block content %}

 {# <div class="recipe"> #}

   <div class="avatar">
     <img src="{{recipe.file_src}}" alt="{{recipe.recipe_title}}">
   </div>

   <div class="thumbnail">
     {% for file in files %}
     <img src="{{file.file_src}}" alt="{{file.recipe_title}}">
     {% endfor %}
   </div>

   <h1>{{recipe.recipe_title}}</h1>
   <h3 class="author">por {{recipe.chef_name}}</h3>

   <div class="recipe-content">
     <div id="ingredients" class="topic">
       <div class="button">
         <h3>Ingredients</h3>
         <h4 id="show-hide-ingredients">MOSTRAR</h4>
       </div>
       <div class="topic-content hide" id="topic-ingredients">
         <ul>

           {% for ingredient in recipe.recipe_ingredients %}
           <li>{{ingredient}}</li>
           {% endfor %}

         </ul>
       </div>
     </div>

     <div id="preparation" class="topic">
       <div class="button">
         <h3>Modo de Preparo</h3>
         <h4 id="show-hide-preparation">MOSTRAR</h4>
       </div>
       <div class="topic-content hide" id="topic-preparation">
         <ul>

           {% for preparation in recipe.recipe_preparation %}
           <li>{{preparation}}</li>
           {% endfor%}

         </ul>
       </div>
     </div>

     <div id="information" class="topic">
       <div class="button">
         <h3>Informações Adicionais</h3>
         <h4 id="show-hide-information">MOSTRAR</h4>
       </div>
       <div class="topic-content hide" id="topic-information">
         <p>{{recipe.recipe_information}}</p>
       </div>
     </div>
   </div>

 {% endblock %}